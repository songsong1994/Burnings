<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_newest_day_tv"
            android:text="01"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_newest_month_tv"
            android:text="01月"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            /></LinearLayout>
    <ImageView
        android:layout_width="85dp"
        android:background="#BEBEBE"
        android:layout_marginLeft="18dp"
        android:layout_height="1dp" />
    <TextView
        android:layout_width="wrap_content"
        android:text="周一 12:00"
        android:id="@+id/item_newest_weektime_tv"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/item_newest_iv"
        android:src="@mipmap/ic_launcher"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/event_newest_coin_iv"
            />
        <LinearLayout
            android:layout_toRightOf="@id/event_newest_coin_iv"
            android:layout_width="match_parent"
            android:id="@+id/ll"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:id="@+id/event_newest_user_tv"
                android:textSize="25sp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:textSize="25sp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="油画"
                android:id="@+id/event_newest_user_type"
                android:textSize="25sp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报名中"
                android:textColor="#FFFFFF"
                android:background="#FE0000"
                android:textSize="14sp"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@mipmap/ic_launcher" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/ll"
            android:layout_toRightOf="@id/event_newest_coin_iv"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="指导："
                android:textSize="18sp"
                />


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
