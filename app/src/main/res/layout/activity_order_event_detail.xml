<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:onClick="onClick"
            android:id="@+id/order_event_detail_return"
            android:src="@mipmap/back_white"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="活动预约"
            android:id="@+id/tv1"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/iv1"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/shar_icon_white"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/iv1"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/wwh_event_star_3"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_event_detail_start_time"
                    android:text="日期"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_event_detail_enroll_num"
                    android:text="报名人数"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="400dp"

                android:id="@+id/order_event_detail_sdv"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_event_detail_topic"
                    android:text="话题"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格"
                    android:id="@+id/order_event_detail_price"
                    android:layout_centerVertical="true"
                    android:textColor="#FF0000"
                    android:textSize="25sp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                >
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/order_event_detail_teacher_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/order_event_detail_teacher_icon"
                    android:text="王卫华"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/order_event_detail_teacher_name"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="+关注"
                    android:onClick="onClick"
                    android:id="@+id/order_event_detail_follow"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/wwh_event_1"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/wwh_event_star_4"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:id="@+id/order_event_detail_end_time"
                    android:text="2017年 06月 14号 周三 12:00"/>

            </LinearLayout>
            <RelativeLayout
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/order_event_detail_address_detail"
                >
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/order_event_detail_address_logo"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@id/order_event_detail_address_logo"
                    android:text="华宇酒店"
                    android:textSize="16sp"
                    android:id="@+id/order_event_detail_address_name"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/order_event_detail_address_logo"
                    android:layout_below="@id/order_event_detail_address_name"
                    android:text="查看场地详情及会员专享优惠"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/next_row_black"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:text="燃 | 提示"/>

            <TextView
                android:id="@+id/order_event_detail_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="本活动开始前一天晚上8点报名未满5人将会自动取消。\n所有活动不支持任何形式的现金退款，只可退至本平台余额账户。\n如在活动开始前24小时前取消预约，您支付的金额将退还至平台余额账户供未来预约使用。\n绘画区域不可携带8岁以下儿童入场。\n任何疑问请拨打：400-8088-303。\n请仔细阅读本条款，点击同意后即可预约活动。" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="400-8088-303"
                android:drawableTop="@mipmap/phone_icon"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text=" | 相关标签"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="油画"
                android:id="@+id/order_event_detail_photo_type"
                android:layout_margin="20dp"
                android:gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:background="#BEBEBE"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_event_detail_user_num"
                android:text="2位燃伙伴已经报名"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"

                />
            <ImageView
                android:layout_width="50dp"
                android:layout_marginLeft="20dp"
                android:layout_height="50dp"
                android:id="@+id/order_event_detail_user_icon"
                android:src="@mipmap/wwh_event_5"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:scrollbars="horizontal"
                android:visibility="gone"
                android:id="@+id/order_event_detail_user_icon_rv"
                />

        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:text="我要报名"
        android:id="@+id/order_event_detail_enroll"
        android:textColor="#FFFFFF"
        android:background="#FF0000"
        android:onClick="onClick"
        android:layout_height="50dp"
        android:layout_gravity="bottom"/>
</FrameLayout>
