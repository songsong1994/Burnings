<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/action_past_iv_id"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@mipmap/ic_launcher_round"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp">
        <TextView
            android:id="@+id/action_past_layout1_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="贵夫人"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="30dp"
            />
        <TextView
            android:id="@+id/action_past_layout1_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="油画"
            android:textSize="30dp"/>
        <ImageView
            android:id="@+id/action_past_layout1_icon_collect"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@mipmap/groupstart"
            android:layout_marginLeft="150dp"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="艺术家:"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/action_past_layout2_tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陈文夏"
            android:textSize="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
           android:src="@mipmap/location"/>
        <TextView
            android:id="@+id/action_past_layout3_tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地理位置"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@mipmap/start_time"
            android:layout_marginLeft="150dp"/>
        <TextView
            android:id="@+id/action_past_layout3_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-04-15"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="燃时刻"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"/>
    <LinearLayout
        android:id="@+id/action_past_layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>


</LinearLayout>